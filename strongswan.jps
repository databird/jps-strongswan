        "hideLabel": false,
        "required": true,
        "default": "127.0.0.1/32"
      },{
        "type": "string",
        "name": "right",
        "caption": "Peer public IP (right)",
        "hideLabel": false,
        "required": true,
        "default": "127.0.0.1"
      }, {
        "type": "string",
        "name": "rightSubnet",
        "caption": "Peer sunbnet (rightsubnet)",
        "hideLabel": false,
        "required": true,
        "default": "127.0.0.1/32"
